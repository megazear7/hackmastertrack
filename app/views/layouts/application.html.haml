<!DOCTYPE html>
%html
%head
  %title Hacktrack
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
  .navbar.navbar-default{role: "navigation"}
    .container
      .navbar-header
        = link_to "Hackmaster Track", characters_path, class: "navbar-brand"
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li
            = link_to "Your Characters", characters_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Browse
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Characters", characters_path
              %li
                = link_to "Classes", character_classes_path
              %li
                = link_to "Races", races_path
              %li
                = link_to "Talents", talents_path
              %li
                = link_to "Skills", talents_path
              %li
                = link_to "Proficiencies", proficiencies_path
              %li
                = link_to "Items", items_path
              %li
                = link_to "Spells", spells_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Create
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Character", new_character_path
              %li
                = link_to "Class", new_character_class_path
              %li
                = link_to "Race", new_race_path
              %li
                = link_to "Talent", new_talent_path
              %li
                = link_to "Skill", new_talent_path
              %li
                = link_to "Proficiency", new_proficiency_path
              %li
                = link_to "Item", new_item_path
              %li
                = link_to "Spell", new_spell_path
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Admin
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Ability Scores", ability_scores_path
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Dungeon Master Tools
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Campaigns", campaigns_path
                = link_to "Encounters", encounters_path
                = link_to "Monsters", monsters_path
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                = current_user.email
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "Account Info", edit_user_registration_path
                %li
                  = link_to "Change Password", edit_user_registration_path
                %li.divider
                %li
                  = link_to "Logout", destroy_user_session_path, method: :delete
          - else
            %li
              = link_to "Login", new_user_session_path

  .container.fill-screen
    .row
      .col-md-12
        - flash.each do |name, msg|
          - if msg.is_a?(String)
            %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
              %a.close{"data-dismiss" => "alert"} &times;
              = content_tag :div, msg, :id => "flash_#{name}"
    = yield
  = render "layouts/footer"
