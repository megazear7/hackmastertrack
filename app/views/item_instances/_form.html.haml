= simple_form_for @item_instance do |f|
  - if @item_instance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_instance.errors.count, "error")} prohibited this item_instance from being saved:"
      %ul
        - @item_instance.errors.full_messages.each do |msg|
          %li= msg
  .hidden= f.input :display, input_html: { checked: @is_display }
  .row
    .col-md-4= f.input :name, input_html: { class: "string form-control", placeholder: @item_instance.actual_name }
    .col-md-4= f.association :item, collection: Item.all.order(:name), input_html: { class: "string form-control", required: true }
  .row
    .col-md-12
      %br
      %h4 Standard Magic Adjustments:
  .row
    .col-md-2= f.input :magic_level, input_html: { class: "string form-control" }
    .col-md-2= f.input :attack_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :defense_mod, input_html: { class: "string form-control" }
  .row
    .col-md-12
      %br
      %h4 Other Magic Adjustments:
  .row
    .col-md-2= f.input :speed_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :init_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :damage_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :damage_reduction, input_html: { class: "string form-control" }
    .col-md-2= f.input :shield_damage_reduction, input_html: { class: "string form-control" }
    .col-md-2= f.input :init_die_mod, input_html: { class: "string form-control" }
  .row
    .col-md-12
      %br
      %h4 Magic Adjustments While Worn:
  .row
    .col-md-2= f.input :worn_init_die_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_attack_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_speed_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_init_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_defense_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_damage_mod, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_damage_reduction, input_html: { class: "string form-control" }
    .col-md-2= f.input :worn_shield_damage_reduction, input_html: { class: "string form-control" }
  .row
    .col-md-4
      %br
      .actions
        .btn-group
          = f.submit 'Save', class: "btn btn-primary"
