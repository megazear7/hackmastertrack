= simple_form_for @proficiency do |f|
  - if @proficiency.errors.any?
    #error_explanation
      %h2= "#{pluralize(@proficiency.errors.count, "error")} prohibited this proficiency from being saved:"
      %ul
        - @proficiency.errors.full_messages.each do |msg|
          %li= msg


  .row
    .col-md-4= f.input :name, input_html: { class: "string form-control" }
    .col-md-4= f.input :description, input_html: { class: "string form-control" }
    .col-md-4= f.input :requirements, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :bp_cost, input_html: { class: "string form-control" }
  .row
    .col-md-4
      %br
      .actions
        .btn-group
          = f.submit 'Save', class: "btn btn-primary"

