= simple_form_for @race do |f|
  - if @race.errors.any?
    #error_explanation
      %h2= "#{pluralize(@race.errors.count, "error")} prohibited this race from being saved:"
      %ul
        - @race.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-md-4= f.input :name, input_html: { class: "string form-control" }
    .col-md-4= f.input :description, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :str_mod, input_html: { class: "string form-control" }
    .col-md-4= f.input :int_mod, input_html: { class: "string form-control" }
    .col-md-4= f.input :wis_mod, input_html: { class: "string form-control" }
    .col-md-4= f.input :dex_mod, input_html: { class: "string form-control" }
    .col-md-4= f.input :con_mod, input_html: { class: "string form-control" }
    .col-md-4= f.input :lks_mod, input_html: { class: "string form-control" }
    .col-md-4= f.input :cha_mod, input_html: { class: "string form-control" }

  .row
    .col-md-4= f.input :hpsizeadj, input_html: { class: "string form-control" }
    .col-md-4= f.input :defadjvslarge, input_html: { class: "string form-control" }
    .col-md-4= f.input :defadj, input_html: { class: "string form-control" }
    .col-md-4= f.input :hideinnatsur, input_html: { class: "string form-control" }
    .col-md-4= f.input :basemv, input_html: { class: "string form-control" }
    .col-md-4= f.input :reachadj, input_html: { class: "string form-control" }
    .col-md-4= f.input :size, collection: size_types, input_html: { class: "string form-control" }
    .col-md-4= f.input :knockbacksize, collection: size_types, input_html: { class: "string form-control" }

    .col-md-4= f.input :lowlightvision, input_html: { class: "string form-control" }
    .col-md-4= f.input :initdiebonus, input_html: { class: "string form-control" }
    .col-md-4= f.input :maleheight, input_html: { class: "string form-control" }
    .col-md-4= f.input :femaleheight, input_html: { class: "string form-control" }
    .col-md-4= f.input :maleweight, input_html: { class: "string form-control" }
    .col-md-4= f.input :femaleweight, input_html: { class: "string form-control" }
    .col-md-4= f.input :lifespan, input_html: { class: "string form-control" }

  .row
    .col-md-4
      %br
      .actions
        .btn-group
          = f.submit 'Save', class: "btn btn-primary"
