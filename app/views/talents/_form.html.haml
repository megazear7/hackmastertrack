= simple_form_for @talent do |f|
  - if @talent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@talent.errors.count, "error")} prohibited this talent from being saved:"
      %ul
        - @talent.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-md-4= f.input :name, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :description, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :requirements, input_html: { class: "string form-control" }
    .col-md-4= f.input :bp_costs, input_html: { class: "string form-control" }
  .row
    .col-md-4
      %br
      .actions
        .btn-group
          = f.submit 'Save', class: "btn btn-primary"
