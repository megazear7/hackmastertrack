= simple_form_for @character do |f|
  - if @character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"
      %ul
        - @character.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-md-4= f.input :name, input_html: { class: "string form-control" }
    .col-md-4= f.input :building_points, input_html: { class: "string form-control" }
    .col-md-4= f.input :health, input_html: { class: "string form-control" }
  - if params[:action] == 'new'
    .row
      .col-md-4= f.association :race, input_html: { class: "string form-control" }
      .col-md-4= f.association :character_class, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :strength, input_html: { class: "string form-control" }
    .col-md-4= f.input :intelligence, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :wisdom, input_html: { class: "string form-control" }
    .col-md-4= f.input :dexterity, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :constitution, input_html: { class: "string form-control" }
    .col-md-4= f.input :looks, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :charisma, input_html: { class: "string form-control" }
  .row
    .col-md-4= f.input :alignment, collection: alignment_options, input_html: { class: "string form-control" }
    .col-md-4= f.input :sex, collection: sex_options, input_html: { class: "string form-control" }
    .col-md-4= f.input :hair, collection: hair_options, input_html: { class: "string form-control" }
    .col-md-4= f.input :handedness, collection: handedness_options, input_html: { class: "string form-control" }
    .col-md-4= f.input :eyes, collection: eye_options, input_html: { class: "string form-control" }

    .col-md-4= f.input :age, input_html: { class: "string form-control" }
    .col-md-4= f.input :height, input_html: { class: "string form-control" }
    .col-md-4= f.input :weight, input_html: { class: "string form-control" }
    .col-md-4= f.input :trade_coins, input_html: { class: "string form-control" }
    .col-md-4= f.input :copper, input_html: { class: "string form-control" }
    .col-md-4= f.input :silver, input_html: { class: "string form-control" }
    .col-md-4= f.input :gold, input_html: { class: "string form-control" }
    .col-md-4= f.input :spell_points, input_html: { class: "string form-control" }
    .col-md-4= f.input :luck_points, input_html: { class: "string form-control" }

  .row
    = f.hidden_field :user_id, value: current_user.id
    .col-md-4
      %br
      .actions
        .btn-group
          = f.submit 'Save', class: "btn btn-primary"
