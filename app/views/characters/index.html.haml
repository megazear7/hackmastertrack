%h1 Listing characters

%table.table.table-hover.table-responsive
  %thead
    %tr
      %th Strength
      %th Intelligence
      %th Wisdom
      %th Dexterity
      %th Constitution
      %th Looks
      %th Charisma
      %th
      %th
      %th
  %tbody
    - @characters.each do |character|
      %tr
        %td= character.strength
        %td= character.intelligence
        %td= character.wisdom
        %td= character.dexterity
        %td= character.constitution
        %td= character.looks
        %td= character.charisma
        %td= link_to 'Show', character
        %td= link_to 'Edit', edit_character_path(character)
        %td= link_to 'Destroy', character, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

