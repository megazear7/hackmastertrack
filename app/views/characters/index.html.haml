%h1 Listing Characters
.row
  .col-md-12
    = link_to 'New Character', new_character_path, class: "btn btn-primary pull-right"
%table.table.table-hover.table-responsive
  %thead
    %tr
      %th Name
      %th Strength
      %th Intelligence
      %th Wisdom
      %th Dexterity
      %th Constitution
      %th Looks
      %th Charisma
      %th
      %th
      %th
  %tbody
    - @characters.each do |character|
      %tr
        %td= link_to character.name, character_path(character)
        %td= number_with_precision(character.strength, precision: 2)
        %td= number_with_precision(character.intelligence, precision: 2)
        %td= number_with_precision(character.wisdom, precision: 2)
        %td= number_with_precision(character.dexterity, precision: 2)
        %td= number_with_precision(character.constitution, precision: 2)
        %td= number_with_precision(character.looks, precision: 2)
        %td= number_with_precision(character.charisma, precision: 2)
        %td= link_to 'Show', character
        %td= link_to 'Edit', edit_character_path(character)
        %td= link_to 'Destroy', character, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
