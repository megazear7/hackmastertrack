%h1 Listing Levels
.row
  .col-md-12
    = link_to 'New Level', new_level_path, class: "btn btn-primary pull-right"
- @classes.order(:name).each do |c|
  %h3= c.name
  %table.table.table-hover.table-responsive
    %thead
      %tr
        %th Level
        %th Hit Dice
        %th Init Mod
        %th Initiative Die Mod
        %th Attack Mod
        %th Speed Mod
        %th Ranged Speed Mod
        %th Spell Points
        %th ST VS Spells
        %th Added Spells
        %td
        %td
        %td
    %tbody
      - @levels.where(character_class_id: c.id).order(:character_class_id, :level_value).each do |level|
        %tr
          %td= level.level_value
          %td= level.hit_dice
          %td= level.init_mod
          %td= level.init_die_mod
          %td= level.attack_mod
          %td= level.speed_mod
          %td= level.ranged_speed_mod
          %td= level.spell_points
          %td= level.stvsspells
          %td= level.added_spells
          %td= link_to 'Show', level
          %td= link_to 'Edit', edit_level_path(level)
          %td= link_to 'Destroy', level, :method => :delete, :data => { :confirm => 'Are you sure?' }
