%h1 Listing Skills
.row
  .col-md-12
    = link_to 'New Skill', new_skill_path, class: "btn btn-primary pull-right" if current_user.admin_level >= 1
%table.table.table-hover.table-responsive
  %thead
    %tr
      %th Name
      %th Cost
      %th Universal
      %th
      %th
      %th
  %tbody
    - @skills.each do |skill|
      %tr
        %td= link_to skill.name, skill
        %td= skill.bp_cost
        %td= skill.universal
        %td= link_to 'Show', skill
        %td= link_to 'Edit', edit_skill_path(skill)
        %td= link_to 'Destroy', skill, :method => :delete, :data => { :confirm => 'Are you sure?' }
